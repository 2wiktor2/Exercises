<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_zadachi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Задачи"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zadacha1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/zadacha2"
        app:layout_constraintTop_toBottomOf="@+id/text_view_zadachi" />

    <Button
        android:id="@+id/zadacha2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/zadacha1"
        app:layout_constraintRight_toLeftOf="@id/zadacha3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_zadachi" />

    <Button
        android:id="@+id/zadacha3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/zadacha2"
        app:layout_constraintRight_toLeftOf="@+id/zadacha4"
        app:layout_constraintTop_toBottomOf="@+id/text_view_zadachi" />
    <Button
        android:id="@+id/zadacha4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="4"
        app:layout_constraintLeft_toRightOf="@+id/zadacha3"
        app:layout_constraintRight_toLeftOf="@id/zadacha5"
        app:layout_constraintTop_toBottomOf="@+id/text_view_zadachi" />
    <Button
        android:id="@+id/zadacha5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/zadacha4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_zadachi" />

    <Button
        android:id="@+id/zadacha6"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Таблица умножения"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zadacha1" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="200dp" />

    <TextView
        android:id="@+id/text_view_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Android"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_line1" />

    <Button
        android:id="@+id/android_zadacha1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Dialog's"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_android" />
    <Button
        android:id="@+id/android_zadacha2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Notifications"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/android_zadacha1" />


</android.support.constraint.ConstraintLayout>