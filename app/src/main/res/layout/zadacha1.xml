<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Zadacha1">

    <TextView
        android:id="@+id/text_view_zadacha1_uslovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/zadacha1_uslovie"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextA"
        android:hint="Число A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editTextB"
        app:layout_constraintTop_toBottomOf="@id/text_view_zadacha1_uslovie" />

    <TextView
        android:id="@+id/text_view_changedA"
        android:hint="число A"
        app:layout_constraintTop_toBottomOf="@+id/editTextA"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/editTextA"
        app:layout_constraintRight_toRightOf="@id/editTextA"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_view_changedB"
        android:hint="число B"
        app:layout_constraintTop_toBottomOf="@+id/editTextB"
        app:layout_constraintRight_toRightOf="@id/editTextB"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/editTextB"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextB"
        android:hint="Число B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/editTextA"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_zadacha1_uslovie" />

    <Button
        android:id="@+id/button_change"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:text="Change"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>